    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--    <style name="AppCompatNoTitle.NoActionBar">-->
    <!--        <item name="windowActionBar">false</item>-->
    <!--        <item name="windowNoTitle">true</item>-->
    <!--    </style>-->

    <style name="AppCompatNoTitle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppCompatNoTitle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ItemText">
        <item name="android:textSize">12sp</item>
        <item name="background">@color/wmmsTextGrey</item>
    </style>

    <style name="MainMenuButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">156dp</item>
        <item name="android:layout_height">156dp</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <style name="MainRankOrHoleOrPuttOrMeterTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainColumnHoleNumberTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>"
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainColumnParOrMetersTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:text">-</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainColumnInOrOutTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>"
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainHoleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:text">-</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="MainPuttTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:text">-</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="MainTabTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">-</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="RankColumnTextView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScoreInserterTextView">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_gray_edge</item>
    </style>
<!--   //*************-->
    <style name="RankColumnHoleTextView">
        <item name="android:layout_width">@dimen/ranking_linear_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">-</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RankRowTextView">
        <item name="android:layout_width">1000dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:text">-</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
