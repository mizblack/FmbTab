<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="308dp"
    android:layout_height="match_parent"
    android:paddingRight="32dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="10dp"
    tools:context=".fragment.CaddieFragment"
    tools:ignore="DisableBaselineAlignment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/club_info_list"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/tv_club_info"
                    style="@style/GlobalTextView.12SP.ebonyBlack.NotoSans.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="클럽정보"
                    tools:ignore="HardcodedText,SpUsage" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/caddie_memo"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_wood"
                    style="@style/GlobalTextView.15SP.lightGray.NotoSans.Regular"
                    android:text="우드"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:id="@+id/tv_woodCount"
                    style="@style/GlobalTextView.15SP.ebonyBlack.NotoSans.Medium"
                    android:layout_alignParentRight="true"
                    android:text="" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_utility"
                    style="@style/GlobalTextView.15SP.lightGray.NotoSans.Regular"
                    android:text="유틸리티"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:id="@+id/tv_utilityCount"
                    style="@style/GlobalTextView.15SP.ebonyBlack.NotoSans.Medium"
                    android:layout_alignParentRight="true"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_iron"
                    style="@style/GlobalTextView.15SP.lightGray.NotoSans.Regular"
                    android:text="아이언"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:id="@+id/tv_ironCount"
                    style="@style/GlobalTextView.15SP.ebonyBlack.NotoSans.Medium"
                    android:layout_alignParentRight="true"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_putter"
                    style="@style/GlobalTextView.15SP.lightGray.NotoSans.Regular"
                    android:text="퍼터"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:id="@+id/tv_putterCount"
                    style="@style/GlobalTextView.15SP.ebonyBlack.NotoSans.Medium"
                    android:layout_alignParentRight="true"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_wedge"
                    style="@style/GlobalTextView.15SP.lightGray.NotoSans.Regular"
                    android:text="웨지"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:id="@+id/tv_wedgeCount"
                    style="@style/GlobalTextView.15SP.ebonyBlack.NotoSans.Medium"
                    android:layout_alignParentRight="true"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_cover"
                    style="@style/GlobalTextView.15SP.lightGray.NotoSans.Regular"
                    android:text="커버"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:id="@+id/tv_coverCount"
                    style="@style/GlobalTextView.15SP.ebonyBlack.NotoSans.Medium"
                    android:layout_alignParentRight="true"
                    android:text="" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clubImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/clubImageCaddieView1"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:background="@color/aliceBlue"
                android:scaleType="fitCenter"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/clubImageCaddieView1">

                <ImageView
                    android:id="@+id/clubImageCaddieView2"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@color/aliceBlue"
                    android:scaleType="fitCenter"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/clubImageCaddieView3"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@color/aliceBlue"
                    android:scaleType="fitCenter"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginTop="22dp"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/signatureTextView"
                style="@style/GlobalTextView.14SP.E6E6E6.NotoSans.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:text="클럽확인 및 정보수집 동의"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:id="@+id/signatureImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                tools:ignore="ContentDescription" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/ebonyBlack" />

            <TextView
                android:id="@+id/tv_sign"
                style="@style/GlobalTextView.12SP.ebonyBlack.NotoSans.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="서명"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/caddie_memo"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/carNumberText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="차량번호"
                android:maxLines="1"
                android:textColor="@color/ebonyBlack"
                android:textSize="18sp"
                tools:ignore="HardcodedText,SpUsage,TextFields" />

            <ImageView
                android:id="@+id/carNumberImageView"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/caddie_memo"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phoneNumberText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="연락처 입력"
                android:maxLines="1"
                android:textColor="@color/ebonyBlack"
                android:textSize="18sp"
                tools:ignore="HardcodedText,SpUsage,TextFields" />

            <ImageView
                android:id="@+id/phoneNumberImageView"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/caddie_memo"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/guestMemoLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    style="@style/GlobalTextView.12SP.ebonyBlack.NotoSans.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="개인메모"
                    tools:ignore="HardcodedText,SpUsage" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/personalImageView"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/caddie_memo"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/guestMemoContentTextView"
                style="@style/GlobalTextView.16SP.ebonyBlack.NotoSans.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="255"/>

            <TextView
                android:id="@+id/guestMemoTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16dp"
                android:visibility="gone"
                tools:ignore="SpUsage" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>