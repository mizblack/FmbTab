<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rankingTextView"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="26dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="26dp"
        tools:ignore="HardcodedText,SpUsage" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/metersDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/irisBlue" />

        <TextView
            android:id="@+id/metersTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/irisBlue"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectorLinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment">

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights,UselessParent">

            <LinearLayout
                android:id="@+id/selectorItemLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="UselessLeaf" />

        </HorizontalScrollView>

        <View
            android:id="@+id/modifyDivider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lightGray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/modifyTextView"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="수정"
            android:textColor="@color/lightGray"
            android:textSize="26dp"
            tools:ignore="HardcodedText,SpUsage" />

    </LinearLayout>

</LinearLayout>