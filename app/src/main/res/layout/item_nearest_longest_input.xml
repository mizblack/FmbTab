<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="200dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rankingTextView"
        style="@style/GlobalTextView.22SP.ebonyBlack.NotoSans.Medium"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:gravity="center_vertical"
        android:text="-"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/nameTextView"
        style="@style/GlobalTextView.22SP.ebonyBlack.NotoSans.Medium"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="-"
        tools:ignore="HardcodedText,SpUsage" />

    <LinearLayout
        android:id="@+id/llmetersTextView"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/irisBlue"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/metersTextView"
            style="@style/GlobalTextView.22SP.irisBlue.NotoSans.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="-"
            tools:ignore="HardcodedText,SpUsage" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reyclerview"
        android:layout_width="420dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:background="@color/zumthor"
        android:fadeScrollbars="false"
        android:scrollbarSize="1dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="horizontal" />

</LinearLayout>