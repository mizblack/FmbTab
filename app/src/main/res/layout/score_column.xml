<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="59dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            style="@style/GlobalTextView.14SP.gray.NotoSans.Medium"
            android:layout_marginTop="9dp"
            android:text="Rank" />

        <Spinner
            android:id="@+id/spinn_distance"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:visibility="gone"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/GlobalTextView.14SP.gray.NotoSans.Medium"
            android:layout_marginTop="9dp"
            android:text="Hole" />

        <TextView
            style="@style/MainRankOrHoleOrPuttOrMeterTextViewNew"
            android:layout_marginBottom="13dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:text="Meters" />

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/lightGray" />

    <!--        여기에 배열로 들어감.-->
    <LinearLayout
        android:id="@+id/holderInfoLinear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/lightGray" />

    <RelativeLayout
        android:id="@+id/inOrOutLinearLayout"
        android:layout_width="87dp"
        android:layout_height="match_parent"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tvCourseName1"
            style="@style/GlobalTextView.14SP.gray.NotoSans.Medium"
            android:layout_marginTop="9dp"
            />

        <TextView
            style="@style/GlobalTextView.14SP.gray.NotoSans.Medium"
            android:id="@+id/tvTotalPar1"
            android:layout_below="@+id/tvCourseName1"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/tvTotalMeters1"
            style="@style/GlobalTextView.14SP.gray.NotoSans.Medium"
            android:layout_marginBottom="13dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/lightGray" />

    <RelativeLayout
        android:id="@+id/inOrOutLinearLayout00"
        android:layout_width="87dp"
        android:layout_height="match_parent"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tvCourseName2"
            style="@style/GlobalTextView.14SP.gray.NotoSans.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp" />

        <TextView
            style="@style/GlobalTextView.14SP.gray.NotoSans.Medium"
            android:id="@+id/tvTotalPar2"
            android:layout_below="@+id/tvCourseName2"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvTotalMeters2"
            style="@style/GlobalTextView.14SP.gray.NotoSans.Medium"
            android:layout_marginBottom="13dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:text="3,160" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inOrOutLinearLayoutTotal"
        android:layout_width="87dp"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:background="@color/ebonyBlack">

        <TextView
            android:id="@+id/inOrOutColumnTotal"
            style="@style/GlobalTextView.14SP.White.NotoSans.Medium"
            android:layout_marginTop="9dp"
            android:text="Total"/>

        <TextView
            style="@style/GlobalTextView.14SP.gray.NotoSans.Medium"
            android:id="@+id/inOrOutTotal"
            android:layout_below="@+id/inOrOutColumnTotal"
            android:layout_marginTop="4dp"
            android:text="72"/>

        <TextView
            android:id="@+id/inOrOutTotalMetersTotal"
            style="@style/MainRankOrHoleOrPuttOrMeterTextViewNew"
            android:layout_marginBottom="13dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:text="6,530" />
    </RelativeLayout>

</LinearLayout>
