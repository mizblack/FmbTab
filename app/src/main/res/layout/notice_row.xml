<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="74dp">


    <TextView
        android:id="@+id/tvNoticeTitle"
        style="@style/GlobalTextView.20SP.ebonyBlack.NotoSans.Bold"
        android:width="240dp"
        android:text="씨티은행 계좌결제 시스템 점검 입니다."
        android:layout_marginLeft="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNoticeContent"
        style="@style/GlobalTextView.12SP.ebonyBlack.NotoSans.Medium"
        android:layout_width="140dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="언제부터 내가 이렇게 배고팠냐 버거킹 먹고 싶다"
        app:layout_constraintStart_toStartOf="@+id/tvNoticeTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvNoticeTitle" />

    <TextView
        android:id="@+id/tvNoticeDateTime"
        style="@style/GlobalTextView.12SP.ebonyBlack.NotoSans.Medium"
        android:text="오후 03:01"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNoticeContent"
        app:layout_constraintStart_toEndOf="@+id/tvNoticeContent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ebonyBlack"
        app:layout_constraintBottom_toBottomOf="parent" />


    <ImageView
        android:id="@+id/imgNew"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/new_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tvNoticeContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNoticeTitle"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tvNoticeContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNoticeTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>







