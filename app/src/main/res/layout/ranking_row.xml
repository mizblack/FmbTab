<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@null"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_rank"
            style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="Rank" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/zumthor"/>

        <TextView
            android:id="@+id/tv_start"
            style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="Start" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/zumthor"/>

        <TextView
            android:id="@+id/tv_end"
            style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="End" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/zumthor"/>

        <TextView
            android:id="@+id/tv_time"
            style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
            android:layout_width="157dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="Time" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/zumthor"/>

        <TextView
            android:id="@+id/tv_hole"
            style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="Hole" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/zumthor"/>

        <TextView
            android:id="@+id/tv_player"
            style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
            android:layout_width="356dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="Player" />

        <TextView
            android:id="@+id/tv_score"
            style="@style/GlobalTextView.18SP.White.NotoSans.Bold"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@color/ebonyBlack"
            android:gravity="center"
            android:text="Score (Over Par)" />

        <!--************************************************************-->
        <LinearLayout
            android:id="@+id/detailLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/ebonyBlack"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_total_tar_score"
                    style="@style/RankColumnTextView"
                    android:layout_width="50dp"
                    android:gravity="center_vertical|end"
                    android:text="-" />

                <TextView
                    android:id="@+id/tv_total_par_score"
                    style="@style/RankColumnTextView"
                    android:layout_width="50dp"
                    android:gravity="center_vertical|start"
                    android:text="-"
                    android:textSize="16dp" />


            </LinearLayout>
            <!--             컨테이너 레이아웃-->
            <LinearLayout
                android:id="@+id/linear_hole_score_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" />

        </LinearLayout>

    </LinearLayout>

</layout>