<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/order_history_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/tvTheRestaurantOrderHistory"
            style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="대식당"/>

        <HorizontalScrollView
            android:id="@+id/tabScrollView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_marginLeft="50dp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/restaurantTabLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="ScrollViewSize,UselessLeaf" />

        </HorizontalScrollView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/topAddButton"
            style="@style/SubMenuTextView"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:text="추가 주문"
            android:fontFamily="@font/notosans_bold"
            android:textSize="17sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <TextView

        style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="태블릿 주문내역"/>

<!--    여기에 history_order_item을 추가한다.-->
    <ScrollView
        android:layout_marginTop="20dp"
        android:id="@+id/order_history_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/order_history_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            />
    </ScrollView>
</LinearLayout>