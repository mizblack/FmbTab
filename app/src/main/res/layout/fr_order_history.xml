<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/order_history_bg"
    android:orientation="vertical"
    android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTheRestaurantOrderHistory"
            style="@style/ShadeTabTitleTextView"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:text="대식당"
            android:textColor="@color/gray" />

        <HorizontalScrollView
            android:id="@+id/tabScrollView"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/restaurantTabLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="ScrollViewSize,UselessLeaf" />

        </HorizontalScrollView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/topAddButton"
            style="@style/SubMenuTextView"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/irisBlue"
            android:gravity="center"
            android:text="추가주문"
            android:textSize="20sp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/black" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="태블릿 주문내역"
        style = "@style/InserterTextViewBold"
        android:textSize="22dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderHistoryRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>