<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="1180dp"
        android:layout_height="650dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hole_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="Hole -"
                android:textColor="@color/black"
                android:textSize="22dp"
                tools:ignore="HardcodedText,RtlSymmetry,SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=" / "
                android:textColor="@color/black"
                android:textSize="22dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/par_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Par-"
                android:textColor="@color/black"
                android:textSize="22dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/dlg_course_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:gravity="center_vertical"
                android:text="- Course (-)"
                android:textColor="@color/black"
                android:textSize="22dp"
                tools:ignore="HardcodedText,SpUsage" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/cancelLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="22dp"
                android:paddingEnd="22dp">

                <Button
                    android:id="@+id/btnLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="저장"
                    android:textColor="@color/irisBlue"
                    android:textSize="22sp"
                    tools:ignore="ButtonStyle,HardcodedText"
                    android:padding="3dp"
                    android:layout_marginEnd="10dp"
                    />

                <Button
                    android:id="@+id/btnRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="취소"
                    android:textColor="@color/gray50"
                    android:textSize="22sp"
                    android:padding="3dp"
                    />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="2"
                    android:text="Player-"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="5"
                    android:text="Score"
                    android:textColor="@color/irisBlue"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="3"
                    android:paddingStart="0dp"
                    android:text="Putt"
                    android:textColor="@color/irisBlue"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/player_score_list"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/ll"
                tools:ignore="ObsoleteLayoutParam" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>