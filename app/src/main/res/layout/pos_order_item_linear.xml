<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical"
    android:background="@color/ebonyBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/ebonyBlack">

        <TextView

            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:text="현장주문 내역"
            android:gravity="center"
            />

<!--        <TextView-->
<!--            android:id="@+id/order_status"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:textColor="@color/gray"-->
<!--            android:textSize="20sp"-->
<!--            android:gravity="center_vertical"-->
<!--            />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_bill_unit_height"
        android:orientation="horizontal"
        android:background="@color/ebonyBlack"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/linear_pos__personal_order_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/personal_bill_unit_height"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/personal_bill_unit_height"
            android:layout_weight="2"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="총계 "
                style="@style/ItemOrderBillTextStyle"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="@color/irisBlue" />




        </RelativeLayout>
    </LinearLayout>
</LinearLayout>