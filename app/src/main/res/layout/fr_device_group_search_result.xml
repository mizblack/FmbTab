<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.FrDeviceGroupSearchResult">
   <include
       android:id="@+id/subtitle"
       layout="@layout/subtitle_layout" />
   <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="검색된 장비"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_gravity="center" />-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="163dp"
       android:padding="@dimen/layout_padding"
       android:orientation="vertical"
       android:id="@+id/ll_masterDevice"
       android:gravity="center_horizontal"
       android:background="@color/wmmsRed"
       >

      <TextView
          android:id="@+id/master_locationcode"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:textSize="14sp"
          android:textColor="#ffffff"
          android:background="@drawable/bg_code"
          android:layout_marginTop="34dp"
          android:gravity="center"
          android:padding="5dp"
          />

      <TextView
          android:id="@+id/master_address"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/deviceId"
          android:text="@string/device_name"
          android:textStyle="bold"
          android:textSize="20sp"
          android:textColor="#ffffff"
          android:ellipsize="end"
          android:maxLines="1" />
      <TextView
          android:id="@+id/master_building"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/master_address"
          android:text="@string/address"
          android:textSize="12sp"
          android:textColor="#ffffff"
          android:ellipsize="end"
          android:maxLines="1" />

      <TextView
          android:id="@+id/master_detail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/master_building"
          android:text="@string/address"
          android:textSize="12sp"
          android:textColor="#ffffff"
          android:ellipsize="end"
          android:maxLines="1" />

      <ImageView
          android:id="@+id/ivDivider"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/divider"
          android:layout_below="@id/address"
          />
   </LinearLayout>


   <android.support.v7.widget.RecyclerView
       android:id="@+id/recycle_device_group_result"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

</LinearLayout>