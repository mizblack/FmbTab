<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="224dp"
    android:gravity="center_vertical">


    <LinearLayout
        android:layout_width="268dp"
        android:layout_height="124dp"
        android:orientation="vertical"
        android:layout_marginLeft="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IN COURSE"
            android:fontFamily="@font/notosans_light"
            android:textColor="@color/black"
            android:textSize="44sp"/>

        <TextView
            android:id="@+id/hole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 HOLE"
            android:fontFamily="@font/notosans_light"
            android:textColor="@color/black"
            android:textSize="44sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="268dp"
        android:layout_height="124dp"
        android:layout_marginRight="42dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_top_dressing_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_light"
            android:text="08:20 시작"
            android:textColor="@color/black"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/tv_top_dressing_finish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_light"
            android:text="08:30 종료"
            android:textColor="@color/black"
            android:textSize="44sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_top_dressing"
        android:layout_width="268dp"
        android:layout_height="124dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="42dp"
        android:background="@color/ebonyBlack"
        android:gravity="center"
        android:text="시작"
        android:textColor="@color/white"
        android:textSize="52sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lightGray"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>