<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/order_history_bg">

    <LinearLayout
        android:id="@+id/order_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="주문번호 20/04/07-AAA" />

        <TextView
            android:id="@+id/tv_order_complete"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="주문예약" />

    </LinearLayout>
<!--    내장객들의 1회주문 내역 컨테이너(기본4인)-->
    <LinearLayout
        android:id="@+id/linear_recept_unit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/order_history_bg"
        android:weightSum="10">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_pos_unit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_bill_unit_height"
        android:orientation="horizontal"
        android:background="@color/order_history_bg"
        android:weightSum="10">

    </LinearLayout>

</LinearLayout>