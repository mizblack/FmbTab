<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/order_history_bg">

    <LinearLayout
        android:id="@+id/order_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="주문번호 20/04/07-AAA" />

        <TextView
            android:id="@+id/tv_order_complete"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="주문예약" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_bill_unit_height"
        android:orientation="horizontal"
        android:background="@color/order_history_bg"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/linear_order_detail"
            android:layout_width="0dp"
            android:layout_height="@dimen/personal_bill_unit_height"
            android:layout_weight="8"
            android:orientation="horizontal" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/personal_bill_unit_height"
            android:layout_weight="2"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="총계 92,000원"
                style="@style/ItemOrderBillTextStyle"
                android:gravity="center"
                android:textColor="@color/irisBlue" />


            <Button
                android:layout_marginTop="5dp"
                android:id='@+id/btn_extra_order_cancel'
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#FF5353"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="주문취소하기"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>