<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:elevation="20dp"
    android:padding="0dp">

    <TextView
        android:id="@+id/tv_title"
        style="@style/GlobalTextView.52SP.irisBlue.NotoSans.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="72dp"
        android:text="해그늘집\n신메뉴 출시!."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/GlobalTextView.52SP.White.NotoSans.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평양냉면으로 무더위\n극복하세요."
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="660dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/popup_sample"/>


    <TextView
        android:id="@+id/tv_order"
        style="@style/GlobalTextView.28SP.ebonyBlack.NotoSans.Medium"
        android:layout_width="234dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:layout_marginStart="82dp"
        android:background="@drawable/shape_round_irisblue_bg"
        android:text="주문하기"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/GlobalTextView.28SP.ebonyBlack.NotoSans.Medium"
        android:layout_width="234dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:background="@drawable/shape_round_white_bg"
        android:text="취소하기"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/tv_order" />

</androidx.constraintlayout.widget.ConstraintLayout>