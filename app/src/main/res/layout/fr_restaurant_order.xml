<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pattensBlue"
    android:orientation="horizontal"
    android:weightSum="10"
    tools:ignore="DisableBaselineAlignment">

    <FrameLayout
        android:id="@+id/fl_order_left_board"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/applyFragmentLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/tabsRootLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingEnd="40dp"
            android:paddingBottom="40dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/arrow_to_apply"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/score_up"
                android:visibility="gone"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="10">


                <TextView
                    android:id="@+id/tvTheRestaurant"
                    style="@style/ShadeTabTitleTextView"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:text="대식당"
                    android:textColor="@color/gray" />

                <HorizontalScrollView
                    android:id="@+id/tabScrollView"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/tabLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        tools:ignore="ScrollViewSize,UselessLeaf"></LinearLayout>

                </HorizontalScrollView>

                <FrameLayout
                    android:layout_width="300dp"
                    android:layout_height="500dp">
                    <LinearLayout
                        android:id="@+id/linear_sub_menu"
                        android:layout_marginTop="20dp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_cate_name"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="메뉴"
                            android:textColor="@color/irisBlue"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/tv_sub_cate_name"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:text="서브메뉴"
                            android:textColor="@color/irisBlue"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinn_sub_menu"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:dropDownWidth="match_parent"
                        android:spinnerMode="dropdown"
                        android:theme="@style/Spinner"
                        android:visibility="gone" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_food"
                    android:layout_width="500dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_noimage"
                    tools:ignore="ContentDescription" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_category"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_gray_edge" />

                <ScrollView
                    android:layout_width="80dp"
                    android:layout_height="500dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/guest_container"
                            android:layout_width="match_parent"
                            android:layout_height="420dp"
                            android:orientation="vertical" />

                        <TextView
                            android:id="@+id/tvCaddy"
                            android:layout_width="59dp"
                            android:layout_height="80dp"
                            android:layout_gravity="bottom"
                            android:background="@color/ebonyBlack"
                            android:gravity="center"
                            android:text="캐디"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/orderBrowserRootLinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="3"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text=" 드시고 싶은 메뉴를\n 선택하신후\n 주문자 이름을 터치하면\n 주문이 추가됩니다."
            android:textColor="@color/irisBlue"
            android:textSize="20dp"
            tools:ignore="HardcodedText,SpUsage" />

        <ScrollView
            android:id="@+id/orderBrowserScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:scrollbars="none"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:id="@+id/orderBrowserLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessLeaf" />

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="총액"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0 원"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
             <RelativeLayout
                 android:id="@+id/rel_order_history"
                 android:layout_width="match_parent"
                 android:layout_height="140dp"
                 android:visibility="invisible">
                 <Button
                     android:id="@+id/btn_add"
                     android:layout_above="@id/btn_order_history"
                     android:layout_width="match_parent"
                     android:layout_height="70dp"
                     android:layout_weight="2"
                     android:background="@color/irisBlue"
                     android:gravity="center"
                     android:text="추가주문하기"
                     android:textColor="@color/white"
                     android:textSize="20dp"
                     android:textStyle="bold"
                     tools:ignore="ButtonStyle,HardcodedText,SpUsage" />
                 <Button
                     android:id="@+id/btn_order_history"
                     android:layout_width="match_parent"
                     android:layout_height="65dp"
                     android:layout_alignParentBottom="true"
                     android:layout_marginTop="5dp"
                     android:layout_weight="2"
                     android:background="@drawable/shape_gray_edge"
                     android:gravity="center"
                     android:text="주문내역보기"
                     android:textColor="@color/gray"
                     android:textSize="20dp"
                     android:textStyle="bold"
                     tools:ignore="ButtonStyle,HardcodedText,SpUsage"
                     android:layout_above="@id/btn_order_history"
                     />
             </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_send_order"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/btnTempSave"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_weight="2"
                    android:background="@drawable/shape_blue_edge"
                    android:gravity="center"
                    android:text="임시저장"
                    android:textColor="@color/irisBlue"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle,HardcodedText,SpUsage" />

                <Button
                    android:id="@+id/resetButton"
                    android:layout_width="110dp"
                    android:layout_height="70dp"
                    android:layout_toRightOf="@id/btnTempSave"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_edge"
                    android:gravity="center"
                    android:text="취소"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle,HardcodedText,SpUsage" />


                <Button
                    android:id="@+id/orderOrApplyBtn"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:background="@color/irisBlue"
                    android:gravity="center"
                    android:text="주문/조리시작"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle,HardcodedText,SpUsage" />

            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>