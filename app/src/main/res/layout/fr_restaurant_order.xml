<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pattensBlue"
    android:orientation="horizontal"
    android:weightSum="10"
    tools:ignore="DisableBaselineAlignment">

    <LinearLayout
        android:id="@+id/tabsRootLinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingTop="30dp"
        android:paddingEnd="40dp"
        android:paddingBottom="40dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <HorizontalScrollView
                android:id="@+id/tabScrollView"
                android:layout_width="450dp"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/tabLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:ignore="ScrollViewSize,UselessLeaf" />

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_cate_name"
                style="@style/MainTabTitleTextView"
                android:layout_marginStart="40dp"
                android:text="-"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_food"
                android:layout_width="520dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_noimage"
                tools:ignore="ContentDescription" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_category"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ScrollView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/guest_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderBrowserRootLinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="3"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text=" 드시고 싶은 메뉴를\n 선택하신후\n 주문자 이름을 터치하면\n 주문이 추가됩니다."
            android:textColor="@color/irisBlue"
            android:textSize="20dp"
            tools:ignore="HardcodedText,SpUsage" />

        <ScrollView
            android:id="@+id/orderBrowserScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:scrollbars="none"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:id="@+id/orderBrowserLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessLeaf" />

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="총액"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0 원"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/orderOrApplyTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/irisBlue"
                android:gravity="center"
                android:text="주문하기"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText,SpUsage" />

            <Button
                android:id="@+id/resetButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_blue_edge"
                android:gravity="center"
                android:text="초기화"
                android:textColor="@color/irisBlue"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText,SpUsage" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>