<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/translucentBlack"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="1160dp"
            android:layout_height="650dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nearestTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Nearest"
                        android:textColor="@color/gray"
                        android:textSize="30dp"
                        tools:ignore="HardcodedText,SpUsage" />

                    <TextView
                        android:id="@+id/longestTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:gravity="center"
                        android:text="Longest"
                        android:textColor="@color/gray"
                        android:textSize="30dp"
                        tools:ignore="HardcodedText,SpUsage" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Hole -"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        tools:ignore="HardcodedText,SpUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=" / "
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        tools:ignore="HardcodedText,SpUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Par-"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        tools:ignore="HardcodedText,SpUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="- Course (-)"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        tools:ignore="HardcodedText,SpUsage" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MainColumnInOrOutTextView"
                            android:paddingStart="0dp"
                            android:text="Rank"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center_vertical"

                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="26dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="26dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="26dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="26dp"
                            tools:ignore="HardcodedText,SpUsage" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MainColumnInOrOutTextView"
                            android:paddingStart="0dp"
                            android:text="Player"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <TextView
                            android:id="@+id/member00NameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="26dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:id="@+id/member01NameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="26dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:id="@+id/member02NameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="26dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:id="@+id/member03NameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="26dp"
                            tools:ignore="HardcodedText,SpUsage" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MainColumnInOrOutTextView"
                            android:paddingStart="0dp"
                            android:text="Score"
                            android:textColor="@color/irisBlue"
                            android:textStyle="normal"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:background="@color/irisBlue"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/cancelLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="42dp"
                        android:paddingEnd="42dp">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:background="@drawable/nearest_longest_close"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:text="Top Player"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        tools:ignore="HardcodedText,SpUsage" />

                    <View
                        android:id="@+id/nameDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:gravity="center"
                        android:text="-\n-"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        tools:ignore="HardcodedText,SpUsage" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,SpUsage" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,SpUsage" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>