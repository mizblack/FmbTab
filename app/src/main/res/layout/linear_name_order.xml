    <TextView
        android:id="@+id/NameTextView"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:text="-"
        android:textColor="@color/gray"
        android:textSize="17dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/CaddyTextView"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/NameTextView"
        android:gravity="center_vertical"
        android:text="(캐디)"
        android:textColor="@color/gray"
        android:textSize="17dp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/tv_plus"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/CaddyTextView"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="28sp"
        android:background="@drawable/ic_plus"
        />

    <ImageButton
        android:id="@+id/tv_minus"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_toRightOf="@id/tv_plus"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="28sp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_minus"
        />

    <TextView
        android:id="@+id/MenuQuantityTextView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/tv_minus"
        android:gravity="center_vertical"
        android:text="-개"
        android:textColor="@color/gray"
        android:textSize="17sp"
        tools:ignore="HardcodedText,SpUsage"
        android:layout_centerVertical="true"
        />

    <!--    <View-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_weight="1" />-->

    <LinearLayout
        android:id="@+id/deleteLinearLayout"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_toRightOf="@id/MenuQuantityTextView"
        android:gravity="center"
        android:layout_centerVertical="true"
       android:background="@drawable/red_x"
        android:orientation="horizontal"
        />

