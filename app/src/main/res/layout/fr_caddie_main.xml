<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp">

    <LinearLayout
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="32dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_marginLeft="32dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_start_sign2"
                    style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_sign"
                    sothree:layout_constraintBottom_toBottomOf="parent"
                    sothree:layout_constraintTop_toTopOf="parent"
                    sothree:layout_constraintStart_toStartOf="parent"
                    />

                <TextView
                    style="@style/GlobalTextView.18SP.zumthor.NotoSans.Bold"
                    android:id="@+id/tv_end_sign2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:text="@string/end_sign"
                    sothree:layout_constraintBottom_toBottomOf="@+id/tv_start_sign2"
                    sothree:layout_constraintTop_toTopOf="@+id/tv_start_sign2"
                    sothree:layout_constraintStart_toEndOf="@+id/tv_start_sign2"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_grab"
                android:layout_width="45dp"
                android:layout_height="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/grab_bg" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/view_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:orientation="horizontal">
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start_sign"
                style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_sign"
                sothree:layout_constraintBottom_toBottomOf="parent"
                sothree:layout_constraintTop_toTopOf="parent"
                sothree:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                style="@style/GlobalTextView.18SP.zumthor.NotoSans.Bold"
                android:id="@+id/tv_end_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="@string/end_sign"
                sothree:layout_constraintBottom_toBottomOf="@+id/tv_start_sign"
                sothree:layout_constraintTop_toTopOf="@+id/tv_start_sign"
                sothree:layout_constraintStart_toEndOf="@+id/tv_start_sign"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>