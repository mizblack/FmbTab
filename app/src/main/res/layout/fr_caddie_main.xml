<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        sothree:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        sothree:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/view_team_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/zumthor" />

                <TextView
                    style="@style/GlobalTextView.28SP.ebonyBlack.NotoSans.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="팀메모" />

                <TextView
                    android:id="@+id/tv_team_memo_content"
                    style="@style/GlobalTextView.14SP.ebonyBlack.NotoSans.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="42dp"
                    android:text="무슨 메모가 필요한지 모르겠습니다. 내용 확인해 주세요. 내용을 확인해주세요. 무슨 메모가 필요한지 모르겠습니다.무슨 메모가 필요한지 모르겠습니다. 내용 확인해 주세요. 내용을 확인해주세요. 무슨 메모가 필요한지 모르겠습니다.
내용 확인해 주세요. 내용을 확인해주세요. 무슨 메모가 필요한지 모르겠습니다.무슨 메모가 필요한지 모르겠습니다. 내용 확인해 주세요. 내용을 확인해주세요. 무슨 메모가 필요한지 모르겠습니다.무슨 메모가 필요한지 모르겠습니다. 내용 확인해 주세요. 내용을 확인해주세요. 무슨 메모가 필요한지 모르겠습니다." />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@drawable/shadow"
        sothree:layout_constraintBottom_toTopOf="@+id/constraintLayout"
     />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        sothree:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_start_sign"
            style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="@string/start_sign"
            sothree:layout_constraintBottom_toBottomOf="parent"
            sothree:layout_constraintStart_toStartOf="parent"
            sothree:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_end_sign"
            style="@style/GlobalTextView.18SP.zumthor.NotoSans.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="@string/end_sign"
            sothree:layout_constraintBottom_toBottomOf="@+id/tv_start_sign"
            sothree:layout_constraintStart_toEndOf="@+id/tv_start_sign"
            sothree:layout_constraintTop_toTopOf="@+id/tv_start_sign" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="134dp"
            android:layout_height="42dp"
            android:background="@drawable/shape_gray_radius_edge"
            android:layout_marginRight="32dp"
            android:text="취소"
            android:textColor="@color/lightGray"
            android:textStyle="bold"
            sothree:layout_constraintBottom_toBottomOf="@+id/tv_start_sign"
            sothree:layout_constraintEnd_toEndOf="parent"
            sothree:layout_constraintTop_toTopOf="@+id/tv_start_sign" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="134dp"
            android:layout_height="42dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_round_irisblue_bg"
            android:text="저장하기"
            android:textColor="@color/white"
            android:textStyle="bold"
            sothree:layout_constraintBottom_toBottomOf="@+id/tv_start_sign"
            sothree:layout_constraintEnd_toStartOf="@+id/btn_cancel"
            sothree:layout_constraintTop_toTopOf="@+id/tv_start_sign" />

        <LinearLayout
            android:id="@+id/btn_team_photo"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginRight="24dp"
            android:gravity="center_vertical"
            sothree:layout_constraintBottom_toBottomOf="@+id/tv_start_sign"
            sothree:layout_constraintEnd_toStartOf="@+id/btn_save"
            sothree:layout_constraintTop_toTopOf="@+id/tv_start_sign">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/team_camera"/>

            <TextView
                style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="팀 클럽사진"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


