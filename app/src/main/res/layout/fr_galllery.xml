<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/bgColorWhite"
    >

    <LinearLayout
        android:id="@+id/gallery_tab"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTheRestaurant"
            style="@style/ShadeTabTitleTextView"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="전체"
            android:gravity="center"
            android:textColor="@color/black" />

        <HorizontalScrollView
            android:id="@+id/tabScrollView"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/guestTabLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                tools:ignore="ScrollViewSize,UselessLeaf"/>


        </HorizontalScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        >
    <Button
        android:id="@+id/bt_take_picture"
        style="@style/MainTabTitleTextView"
        android:background="@color/bgColorWhite"
        android:layout_marginStart="40dp"
        android:text="촬영"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/bt_close"
        style="@style/MainTabTitleTextView"
        android:background="@color/bgColorWhite"
        android:layout_marginStart="40dp"
        android:text="닫기"
        tools:ignore="HardcodedText" />
</LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="40dp"
        android:id="@+id/recycler_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gallery_tab"
        android:visibility="gone"
        />
    <ImageView
        android:layout_marginTop="40dp"
        android:layout_below="@id/gallery_tab"
        android:id="@+id/pic_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>