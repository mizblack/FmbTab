<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColorWhite"
    android:paddingLeft="5dp"
    android:paddingTop="10dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:id="@+id/gallery_tab"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTheRestaurant"
            style="@style/ShadeTabTitleTextView"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="전체"
            android:textColor="@color/black" />

        <HorizontalScrollView
            android:id="@+id/tabScrollView"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/guestTabLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="ScrollViewSize,UselessLeaf" />


        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_take_picture"
            style="@style/MainTabTitleTextView"
            android:layout_marginStart="40dp"
            android:background="@color/bgColorWhite"
            android:text="촬영"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/bt_close"
            style="@style/MainTabTitleTextView"
            android:layout_marginStart="40dp"
            android:background="@color/bgColorWhite"
            android:text="닫기"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_gallery"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@id/gallery_tab"
        android:layout_marginTop="40dp"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/fl_pic_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/bgColorWhite"
        >


        <ImageView
            android:padding="10dp"
            android:id="@+id/pic_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            />
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/pic_gallery_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/blue_none_background_close" />
    </FrameLayout>

</RelativeLayout>