<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColorWhite"
    android:paddingLeft="5dp"
    android:paddingTop="10dp"
    android:paddingRight="5dp">

    <TextView
        android:id="@+id/tvTheRestaurant"
        style="@style/GlobalTextView.18SP.ebonyBlack.NotoSans.Bold"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:text="전체"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="24dp" />

    <LinearLayout
        android:id="@+id/guestTabLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="ScrollViewSize,UselessLeaf"
        app:layout_constraintStart_toEndOf="@+id/tvTheRestaurant"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/bt_take_picture"
        style="@style/GlobalTextView.20SP.irisBlue.NotoSans.Bold"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="촬영"
        app:layout_constraintEnd_toStartOf="@+id/bt_close"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/bt_close"
        style="@style/GlobalTextView.20SP.zumthor.NotoSans.Bold"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="닫기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_gallery"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTheRestaurant" />

    <FrameLayout
        android:id="@+id/fl_pic_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColorWhite"
        android:visibility="gone">


        <ImageView
            android:id="@+id/pic_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/pic_gallery_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/blue_none_background_close" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>