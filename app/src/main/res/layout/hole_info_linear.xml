<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hole1LinearLayout"
    android:layout_width="82dp"
    android:layout_height="90dp"
    android:orientation="vertical">
    <View
        android:id="@+id/view_game_type"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/course_name"
            style="@style/MainColumnHoleNumberTextView"
            android:text=""
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/hole_no"
            style="@style/MainColumnHoleNumberTextView"
            android:text="vvvvvv"
            android:textColor="@color/gray" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="NestedWeights" />

    <TextView
        android:id="@+id/hole_par"
        style="@style/MainColumnParOrMetersTextView"
        android:text="par 3"
        android:textColor="@color/gray" />

    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="38dp"-->
    <!--        android:layout_weight="1" />-->

    <TextView
        android:id="@+id/hole_meter"
        style="@style/MainColumnParOrMetersTextView"
        android:paddingBottom="16dp"
        android:text="aaaaa"
        android:textColor="@color/gray" />

</LinearLayout>