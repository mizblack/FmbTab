<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_name"
        style="@style/GlobalTextView.22SP.ebonyBlack.NotoSans.Medium"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="강도식" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/zumthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/GlobalTextView.22SP.irisBlue.NotoSans.Bold"
        android:id="@+id/tv_nearest"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="center"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nearest_rank"
        style="@style/GlobalTextView.24SP.White.NotoSans.Bold"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@color/ebonyBlack"
        android:gravity="center" />

    <TextView
        style="@style/GlobalTextView.22SP.irisBlue.NotoSans.Bold"
        android:id="@+id/tv_longest"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="center"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_longest_rank"
        style="@style/GlobalTextView.24SP.White.NotoSans.Bold"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@color/ebonyBlack"
        android:gravity="center" />

</LinearLayout>